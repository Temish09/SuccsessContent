<GreetingCard>:
    id: gc
    orientation: "vertical"
    spacing: 14
    size_hint: [0.9, 0.7]
	MDLabel:
		text: app.hello
		text_size: self.size
		font_size: 50
		markup: True
		halign: "center"
		valign: "middle"

	MDFillRoundFlatButton:
		text: app.start
		size_hint_x: 0.6
		size_hint_y: 0.5
		pos_hint: {"center_x": 0.5}
		on_press: root.dismiss()

	MDRoundFlatButton:
		text: app.rate
		size_hint_x: 0.6
		size_hint_y: 0.5
		pos_hint: {"center_x": 0.5}

	MDLabel:
		text: app.footer
		text_size: self.size
		markup: True
		halign: "center"
		valign: "middle"
